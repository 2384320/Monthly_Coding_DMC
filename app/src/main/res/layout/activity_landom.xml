<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandomActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/activity_main_image_title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_padding="15dp"
                android:layout_weight="1"
                android:background="@drawable/all_button_radius_10dp"
                android:backgroundTint="#DDDCDC"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:paddingTop="35dp"
                        android:text="점심 랜덤 추천"
                        android:textAlignment="center"
                        android:textColor="#072846"
                        android:textSize="35dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/activity_main_image_landom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:layout_weight="2"
                        app:srcCompat="@drawable/ic_baseline_outdoor_grill_24" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_padding="15dp"
                android:layout_weight="1"
                android:background="@drawable/all_button_radius_10dp"
                android:backgroundTint="#DDDCDC"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:paddingTop="35dp"
                        android:text="카테고리"
                        android:textAlignment="center"
                        android:textColor="#072846"
                        android:textSize="35dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/activity_main_image_category"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:layout_weight="2"
                        app:srcCompat="@drawable/ic_baseline_category_24" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_padding="15dp"
                android:layout_weight="1"
                android:background="@drawable/all_button_radius_10dp"
                android:backgroundTint="#DDDCDC"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:paddingTop="35dp"
                        android:text="지도"
                        android:textAlignment="center"
                        android:textColor="#072846"
                        android:textSize="35dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/activity_main_image_map"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:layout_weight="2"
                        app:srcCompat="@drawable/ic_baseline_map_24" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/all_button_radius_10dp"
                android:backgroundTint="#DDDCDC"
                android:layout_margin="15dp"
                android:layout_padding="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="15dp"
                        android:paddingTop="35dp"
                        android:text="음식점 정보"
                        android:textAlignment="center"
                        android:textColor="#072846"
                        android:textSize="35dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/activity_main_image_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:layout_weight="2"
                        app:srcCompat="@drawable/ic_baseline_event_note_24" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>